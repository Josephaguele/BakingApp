<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="25sp"
        android:text="FodName"/>

    <TextView
        android:id="@+id/quantity_label"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Quantity"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2b3d4d"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/quantity"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/quantity_label"
        android:fontFamily="sans-serif"
        android:text="2"
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/measure_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_label"
        android:text="Measure"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2b3d4d" />

    <TextView
        android:id="@+id/measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@id/measure_label"
        android:text="23"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/ingredient_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/measure_label"
        android:text="Ingredient"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2b3d4d" />


    <TextView
        android:id="@+id/ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/measure"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/ingredient_label"
        android:text="Bread and Water"
        android:textSize="18sp" />
</RelativeLayout>